<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>David Wengier</Authors>
    <Company />
    <Description>A simple replacement for TheoryData that automatically serializes and deserializes in order to show more fidelity in test cases.</Description>
    <PackageProjectUrl>https://github.com/davidwengier/Xunit.SerializedTheoryData</PackageProjectUrl>
    <Version>1.0.2</Version>
    <Copyright>Copyright © David Wengier</Copyright>
    <PackageTags>xunit testing theorydata serialized</PackageTags>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>opensourcekey.snk</AssemblyOriginatorKeyFile>
    <RootNamespace>Xunit</RootNamespace>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <PackageId>Xunit.SerializedTheoryData</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="xunit" Version="2.2.0" />
  </ItemGroup>

</Project>
